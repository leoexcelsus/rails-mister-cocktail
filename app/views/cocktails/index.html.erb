<div class="container">
  <h1>List of cocktails</h1>
</div>

<div class="container">
  <div class="flex-div">
    <% @cocktails.each do |c| %>
      <div class="drink-card">
        <h5>
          <%= link_to c[:name], cocktail_path(c[:id]) %>
        </h5>
      </div>
    <% end %>
  </div>

</div>

<%= link_to 'Add a new cocktail', new_cocktail_path %>
