<h1><%= @cocktail.name %></h1>

<div class="container">
  <div class="cocktail-img-div" style="background-image: url('<%= cl_image_path @cocktail.photo.key %>')">
  </div>
  <div class="table-div">
    <table class="table">
      <tr>
        <th>Dose</th>
        <th>Ingredient</th>
      </tr>
      <% @cocktail.doses.each do |dose| %>
      <tr>
        <td>
          <%= dose.description %>
        </td>
        <td>
          <%= dose.ingredient.name %>
          <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe,
          delete_dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        </td>
      <% end %>
    </table>
  </div>
</div>

<p><%= link_to 'Add a dose to this cocktail', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>


<%= link_to 'Back to list', cocktails_path, class: "btn btn-secondary" %>
